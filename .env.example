# Database Configuration
DATABASE_URL=sqlite:dnd_scheduler.db

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=password123

# Email Configuration (SMTP)
# Set MOCK_EMAIL=true to disable real email sending (useful for testing)
MOCK_EMAIL=false
# Use your email provider's SMTP settings.
# Examples: 
# Gmail: smtp.gmail.com, 587, your_email@gmail.com, your_app_password
# SendGrid: smtp.sendgrid.net, 587, apikey, your_api_key
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password
SMTP_FROM_EMAIL=noreply@dndscheduler.com

# WhatsApp Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token

# Authelia SSO Configuration
AUTHELIA_ENABLED=false
# AUTHELIA_LOGIN_URL=https://auth.example.com
# AUTHELIA_LOGOUT_URL=https://auth.example.com/logout
